<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{16} [%M{10}] - %msg%n</pattern>
        </encoder>
        <!--<file>tests.log</file>-->
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="com.epam.rd.autotask.threads.batchprocessor.MessagePreprocessorTest" level="info"/>
    <!--    <logger name="com.epam.rd.autotask.threads.batchprocessor.MessagePreprocessor" level="debug"/>-->

</configuration>